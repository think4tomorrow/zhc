/ {
	pro_micro_d: connector_d {
		compatible = "arduino-pro-micro";
		#gpio-cells = <2>;
		gpio-map-mask = <0xffffffff 0xffffffc0>;
		gpio-map-pass-thru = <0 0x3f>;
		gpio-map
			= <00 0 &gpioa 10 0>	/* D0 */
			, <01 0 &gpioa 9 0>		/* D1 */
			, <02 0 &gpiob 7 0>		/* D2 */
			, <03 0 &gpiob 6 0>		/* D3 */
			, <04 0 &gpiob 5 0>		/* D4/A6 */
			, <05 0 &gpiob 4 0>		/* D5 */
			, <06 0 &gpiob 3 0>		/* D6/A7 */
			, <07 0 &gpiob 2 0>		/* D7 */
			, <08 0 &gpiob 1 0>		/* D8/A8 */
			, <09 0 &gpiob 0 0>		/* D9/A9 */
			, <10 0 &gpiob 9 0>		/* D10/A10 */
			, <16 0 &gpiob 15 0>	/* D16 */
			, <14 0 &gpiob 14 0>	/* D14 */
			, <15 0 &gpiob 13 0>	/* D15 */
	};

	pro_micro_a: connector_a {
		compatible = "arduino-pro-micro";
		#gpio-cells = <2>;
		gpio-map-mask = <0xffffffff 0xffffffc0>;
		gpio-map-pass-thru = <0 0x3f>;
		gpio-map
			= <00 0 &gpiob 8 0>	/* A0 */
			, <01 0 &gpioa 0 0>	/* A1 */
			, <02 0 &gpioa 1 0>	/* A2 */
			, <03 0 &gpioa 2 0>	/* A3 */
			, <06 0 &gpiob 5 0>	/* D4/A6 */
			, <07 0 &gpiob 3 0>	/* D6/A7 */
			, <08 0 &gpiob 1 0>	/* D8/A8 */
			, <09 0 &gpiob 0 0>	/* D9/A9 */
			, <10 0 &gpiob 9 0>	/* D10/A10 */
			;
	};
};

pro_micro_i2c: &i2c1 {};
pro_micro_spi: &spi1 {};
pro_micro_serial: &usart1 {};
