#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <keymap.h>

/ {
	chosen {
		zmk,keymap = &keymap0;
	};
	keymap0: keymap {
		compatible = "zmk,keymap";
		label ="Default keymap";
		layers = <&default &lower &raise>;
	};

	layers {
		compatible = "zmk,layers";

		default: layer_0 {
			label = "DEFAULT";

			bindings = <
				&reset &kp A
				&kp B  &kp C>;
		};

		lower: layer_1 {
			label = "LOWER";

			bindings = <
				&reset &kp D
				&kp F  &kp E>;
		};

		raise: layer_2 {
			label = "RAISE";

			bindings = <
				&reset &kp I
				&kp G  &kp H>;
		};
	};
};
